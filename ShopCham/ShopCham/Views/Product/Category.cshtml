@model IEnumerable<ShopCham.Models.Product>
@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<div>
    @foreach (var p in Model)
    {
        <div class="col-md-3 col-sm-6 col-sx-12">
            <div class="nn-product-box">
                <a href="/Product/Detail/@p.Id">
                    <img id="i@(p.Id)" class="img-responsive" alt="@p.Name" src="/Content/img/products/@p.Image" />
                </a>
                <div class="nn-product-box-descriptions">
                    <h3 class="nn-product-box-name">
                        <a href="/Product/Detail/@p.Name.ToLower()_@p.Id" title="@p.Name">@p.Name</a>
                    </h3>
                    <div class="nn-product-box-price">
                        <span>@p.UnitPrice</span>
                    </div>
                    <div class="nn-product-box-actions">
                        <button type="button" title="Thêm vào giỏ" class="btn btn-default add-to-cart" data-id="@p.Id">
                            <span>Thêm vào giỏ</span>
                        </button>
                    </div>
                </div>
            </div>
        </div> 
    }    
</div>


