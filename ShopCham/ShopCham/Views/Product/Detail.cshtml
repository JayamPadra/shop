@model ShopCham.Models.Product
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<div>
    <div class="nn-product-assential">
        <div class="nn-product-detail-image col-sm-6">
            <img class="img-responsive" src="/Content/img/products/@Model.Image" />
        </div>
        <div class="col-sm-6">
            <h1>@Model.Name</h1>
            <h3>Product Code: @Model.Id</h3>
            <h3>Category: <a href="/Product/Category?CategoryID=@Model.CategoryId">@Model.Category.Name</a></h3>
            <h3>Avalability: @Model.Quantity</h3>
            <h3>Price: @Model.UnitPrice</h3>
            <button class="btn btn-danger">Add Cart</button>
        </div>
    </div>
    <div class="clearfix"></div>
    <div>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#descript" aria-controls="descript" role="tab" data-toggle="tab">Descriptions</a></li>
            <li role="presentation"><a href="#specifi" aria-controls="specifi" role="tab" data-toggle="tab">Specifications</a></li>
            <li role="presentation"><a href="#comment" aria-controls="comment" role="tab" data-toggle="tab">Comments</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="descript">
                @Model.Description
            </div>
            <div role="tabpanel" class="tab-pane" id="specifi">
                <table class="table table-hover">
                    <tr>
                        <td>ID:</td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td>Name:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Available:</td>
                        <td>@Model.Available</td>
                    </tr>
                    <tr>
                        <td>Product Date:</td>
                        <td>@Model.ProductDate</td>
                    </tr>
                    <tr>
                        <td>Supplier:</td>
                        <td>@Model.Supplier.Name</td>
                    </tr>
                    <tr>
                        <td>Discount:</td>
                        <td>@Model.Discount</td>
                    </tr>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane" id="comment">
                Comment here
            </div>
        </div>

    </div>
</div>

