<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shop Cham</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <header class="nn-header">
            <!--Logo-->
            <div class="col-sm-3 col-md-3 nn-text-align-center">
                <a href="/"><img src="/Content/img/logo.png"class="img-responsive"/></a>
            </div>

            <!--Search box-->
            <div class="col-md-6 col-sm-6">
                @Html.Partial("_Search")
            </div>

            <!--Cart box-->
            <div class="nn-cart-box col-sm-3 col-ms-3">
                <div class="nn-top-cart-wraper">
                    <div class="nn-top-cart-contain">
                        @Html.Partial("_CartInfo")
                    </div>
                </div>
            </div> 
        </header>
        <!--Navigation-->
        <div class="navbar navbar-default">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".js-navbar-collapse">
                    <span class="sr-only">Toogle navigation ??</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home"></span></a>
            </div>
            <div class="navbar-collapse collapse js-navbar-collapse">
                @Html.Partial("_Menu");
            </div> 
        </div>

        <div class="container row">
            <!--Left slidebar-->
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-12"> 
                @Html.Action("Category", "Home")
                @Html.Action("SaleOff", "Home")
                @Html.Action("BestSeller", "Home")
                @Html.Partial("_AdBanner")
                 
                @*@Html.Action("Category", "Home")
                @Html.Action("SaleOff", "Home")
                @Html.Action("Special", "Home")
                @Html.Action("_AdBanner", "Home")*@                            
            </div>

            <!--Main content-->
            <div class="col-md-9 col-sm-9 col-lg-9 col-xs-12">
                @RenderBody()
            </div>
        </div>       

        <!--Start Footer-->
        <div class="ma-footer-static">
            @Html.Partial("_Footer");
        </div>        
    </div>
    
    @*<div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shop Cham", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ShopCham.com</p>
        </footer>
    </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
